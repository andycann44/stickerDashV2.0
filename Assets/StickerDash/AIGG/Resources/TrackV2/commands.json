{
  "rules": [
    {
      "id": "scenario-create",
      "pattern": "\\bcreate\\s+(?<length>\\d+)\\s*m\\s*(?:by|x)\\s*(?<width>\\d+)\\s*m(?<extras>.*)$",
      "call": "GenerateScenarioFromPrompt({length}, {width}, {extras})"
    },
    {
      "id": "no-gaps-first-n",
      "pattern": "\\bno\\s+gaps?\\s+(?:in|for)?\\s*first\\s*(?<rows>\\d+)\\s*rows?\\b",
      "call": "NoGapsInFirstRows({rows})"
    },
    {
      "id": "smooth-altitude",
      "pattern": "\\b(?:smooth|no\\s*steps?)\\s*(?:altitude|height|vertical)\\b",
      "call": "SmoothPitchByRows()"
    },
    {
      "id": "clear-mesh",
      "pattern": "\\bclear\\s+mesh\\b",
      "call": "ClearTrackMesh(true)"
    },
    {
      "id": "clear-tiles",
      "pattern": "\\bclear\\s+tiles?\\b",
      "call": "ClearTiles()"
    },
    {
      "id": "bake-holes",
      "pattern": "\\bbake\\s+(?:preserve|with)\\s+holes\\b",
      "call": "BuildMeshFromTilesPreserveHoles(0.2, true)"
    },
    {
      "id": "bake-clean",
      "pattern": "\\bbake\\s+clean\\b",
      "call": "BuildSplineFromTrack(0, 0, 0.2, true)"
    }
  ]
}